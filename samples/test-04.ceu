#include <c.ceu>
par/or do
    // global lua state
    [[ v = 0 ]];
    var int v = 0;
    every 1s do
        [[print('Lua 1', v, @v) ]];
        v = v + 1;
        [[ v = v + 1 ]];
    end
with
    // local lua state
    lua[] do
        [[ v = 0 ]];
        var int v = 0;
        every 1s do
            [[print('Lua 2', v, @v) ]];
            v = v + 1;
            [[ v = v + 1 ]];
        end
    end
with
    // local lua state
    lua[] do
        [[ v = 0 ]];
        var int v = 0;
        every 1s do
            [[print('Lua 3', v, @v) ]];
            v = v + 1;
            [[ v = v + 1 ]];
        end
    end
with
    await async do
        loop i in [0->5[ do
            _sleep(1);
            emit 1s;
        end
    end
end
escape 0;

